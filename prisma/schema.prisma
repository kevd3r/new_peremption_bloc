// prisma/schema.prisma

datasource db {
  provider = "mysql"
}

generator client {
  provider = "prisma-client-js"
}

// Définition des 3 Rôles
enum Role {
  DEV
  ADMIN
  USER
  @@map("roles")
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  password    String   // Doit stocker le mot de passe HACHÉ
  firstName   String
  lastName    String
  badgeNumber String   @unique @db.VarChar(191)
  role        Role     @default(USER)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("users")
}